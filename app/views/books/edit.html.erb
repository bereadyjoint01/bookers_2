<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

    <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

    <% if @book.errors.any? %>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <p>
  <%= f.submit 'Update Book' %>
  </p>

  <%= link_to "show", book_path(@book) %>
  <%= link_to "Back", books_path %>
<% end %>
